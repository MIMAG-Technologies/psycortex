generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Inquiry {
  timeframe      DateTime @id @default(now())
  country        String   @db.VarChar(100)
  state          String   @db.VarChar(100)
  city           String   @db.VarChar(100)
  firstname      String   @db.VarChar(100)
  lastname       String   @db.VarChar(100)
  contactNumber  String   @db.VarChar(20)
  email          String   @db.VarChar(255)
  message        String   @db.VarChar(5000)

  @@map("Inquiries")
}

model Booking {
  timeframe       DateTime @id @default(now())
  name            String   @db.VarChar(100)
  contactNumber   String   @db.VarChar(20)
  email           String   @db.VarChar(255)
  city            String   @db.VarChar(100)
  state           String   @db.VarChar(100)
  country         String   @db.VarChar(100)
  problemType     String   @db.VarChar(100)
  description     String   @db.VarChar(5000)

  @@map("Bookings")
}
model Subscriptions {
  email           String   @id @db.VarChar(255)
  @@map("Subscriptions")
}


// Define the User model
model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  phoneNo        String
  address        String
  cart           String?
  purchasesItems String?
}

//Temporary OTPS
model Otps {
  email     String   @unique
  otp       String
  DateTime  String
}

// schema.prisma

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  productId   String   @unique
  imgsrc      String
  diffrentby  String
  sessions    String
  cost        String
  description String? @db.Text
}

model Admin {
  username   String   @id @unique
  password   String
}



